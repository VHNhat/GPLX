<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/register_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp">

        <TextView
            android:id="@+id/title_register"
            style="@style/TextViewLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Đăng nhập"
            android:textSize="35dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/register_head"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/user_name"
            style="@style/EditTextRouder"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Email/Tên đăng nhập"
            android:padding="10dp" />

        <RelativeLayout
            android:id="@+id/password_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/password"
                style="@style/EditTextRouder"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="start"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:padding="10dp"

                android:paddingRight="20dp"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignRight="@id/password"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <ImageButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/show_hide_icon" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/ButtonSmall"
            android:layout_below="@+id/password_box"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/blue_btn"
            android:text="Đăng nhập"
            android:textSize="20dp"
            android:textColor="@color/white"
            app:cornerRadius="100dp" />

        <TextView
            android:id="@+id/forgot_pass"
            style="@style/TextViewLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login"
            android:layout_centerHorizontal="true"
            android:text="Quên mật khẩu"
            android:textSize="24dp"
            />
        <TextView
            android:layout_marginTop="45dp"
            android:id="@+id/or_by_method"
            style="@style/TextViewLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Hoặc đăng nhập bằng"
            android:textSize="15dp" />
        <RelativeLayout
            android:layout_below="@id/or_by_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/btn_social_group"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_google"
                    android:layout_marginRight="20dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_facebook"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/btn_social_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nếu chưa có tài khoản. Vui lòng"
                        android:textSize="18dp"
                        android:padding="5dp"/>
                    <TextView
                        style="@style/TextViewLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Đăng Ký" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>