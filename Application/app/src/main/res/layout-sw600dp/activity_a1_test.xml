<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team2.mobileapp.gplx.view.A1_TestActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"

        />

    <TextView
        android:id="@+id/text_choice_category"
        style="@style/TextTitletablet"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:background="@drawable/button_radius_10"
        android:backgroundTint="@color/green_main"
        android:padding="30dp"
        android:text="HẠNG A1"
        android:textColor="@color/white"
        android:textSize="0.24in">

    </TextView>


    <ScrollView
        android:id="@+id/scroll_category"
        android:layout_width="661dp"
        android:layout_height="650dp"
        android:layout_below="@+id/guideline"
        android:layout_centerInParent="true"
        android:overScrollMode="always">

        <RelativeLayout
            android:id="@+id/list_choice_category"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/btn_radom"
                style="@style/AroundButton"
                android:layout_width="252dp"
                android:layout_height="298dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="51dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">

                <ImageView
                    android:id="@+id/guide"
                    android:layout_width="238dp"
                    android:layout_height="198dp"
                    android:paddingTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/file_dock_fill"></ImageView>


                <TextView
                    android:id="@+id/tv_description_a1"
                    android:layout_width="248dp"
                    android:layout_height="79dp"
                    android:layout_below="@id/guide"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:text="Huớng dẫn "
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="0.2in"
                    android:textStyle="bold">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_set"
                style="@style/AroundButton"
                android:layout_width="252dp"
                android:layout_height="298dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/btn_radom"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:src="@drawable/close_round_fill"></ImageView>

                <TextView
                    android:id="@+id/tv_description_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Thi theo bộ đề"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="0.2in"
                    android:textStyle="bold">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_board"
                style="@style/AroundButton"
                android:layout_width="252dp"
                android:layout_height="298dp"
                android:layout_below="@+id/btn_radom"
                android:layout_alignParentStart="true"
                android:layout_marginStart="52dp"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="238dp"
                    android:layout_height="198dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:src="@drawable/cancel_fill" />


                <TextView
                    android:id="@+id/tv_description_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Các loại biển báo"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="0.2in"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_review_question"
                style="@style/AroundButton"
                android:layout_width="252dp"
                android:layout_height="298dp"
                android:layout_below="@id/btn_set"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/btn_board"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">


                <ImageView
                    android:layout_width="238dp"
                    android:layout_height="198dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="20dp"
                    android:src="@drawable/open_book" />


                <TextView
                    android:id="@+id/tv_description_b2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Ôn tập câu hỏi"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="0.2in"
                    android:textStyle="bold">

                </TextView>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <include
        android:id="@+id/bottom_bar"
        layout="@layout/activity_navigation" />
</RelativeLayout>