<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team2.mobileapp.gplx.view.SetNewPasswordActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_br"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/br_car2" />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/radiusTopRightLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_br"
        android:layout_marginTop="-16dp"
        android:backgroundTint="@color/gray_milk"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/text_set_new_password"
            style="@style/TextTitletablet"
            android:layout_centerHorizontal="true"
            android:padding="30dp"
            android:text="@string/text_set_new_password">

        </TextView>

        <EditText
            android:id="@+id/set_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_set_new_password"
            android:layout_marginTop="30dp"
            android:background="@drawable/br_input"
            android:hint="New password"
            android:inputType="textPassword"
            android:padding="30dp"
            android:textSize="0.24in"/>

        <EditText
            android:id="@+id/confirm_set_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/set_new_pass"
            android:layout_marginTop="30dp"
            android:background="@drawable/br_input"
            android:hint="Confirm new password"
            android:inputType="textPassword"
            android:padding="30dp"
            android:textSize="0.24in"/>

        <Button
            android:id="@+id/btn_send_new_pass"
            style="@style/ButtonRoudertablet"
            android:layout_width="448dp"
            android:layout_height="97dp"
            android:layout_below="@+id/confirm_set_new_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/br_button2"
            android:text="Xác nhận"
            android:textSize="0.24in" />

        <ImageView
            android:id="@+id/logo_bottom"
            android:layout_width="197dp"
            android:layout_height="86dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"

            />
    </RelativeLayout>

</RelativeLayout>