<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/check_out_focus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team2.mobileapp.gplx.view.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@drawable/mask_group">

        <TextView
            android:id="@+id/tv_app"
            style="@style/TextAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:text="TRANG CÁ NHÂN"
            android:textAlignment="center"
            android:textSize="0.3in">

        </TextView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="262dp"
        android:layout_height="207dp"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:src="@drawable/avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image"
        android:layout_marginTop="100px"
        android:padding="40dp">

        <RelativeLayout
            android:id="@+id/name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_first_name"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Họ "
                        android:textColor="@color/black"
                        android:textSize="0.24in"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_first_name"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/input_radius"
                        android:backgroundTint="#E6F3F3F3"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textSize="0.2in" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    >

                    <TextView

                        android:id="@+id/tv_last_name"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Tên "
                        android:textColor="@color/black"
                        android:textSize="0.24in"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_last_name"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_last_name"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/input_radius"
                        android:backgroundTint="#E6F3F3F3"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:textSize="0.2in" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_profile"
            android:paddingLeft="10dp"
            android:text="Tên đăng nhập"
            android:textColor="@color/black"
            android:textSize="0.3in"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_radius"
            android:backgroundTint="#E6F3F3F3"
            android:enabled="true"
            android:hint="user"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:textSize="0.3in" />

        <TextView
            android:id="@+id/tv_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_username"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="0.3in"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email_profile"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_radius"
            android:backgroundTint="#E6F3F3F3"
            android:enabled="false"
            android:hint="example@gmail.com"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="0.3in"/>

        <Button
            android:id="@+id/btn_save"
            style="@style/ButtonRoudertablet"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_below="@+id/et_email_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/br_button2"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textSize="0.3in" />
    </RelativeLayout>

<!--    <pl.droidsonroids.gif.GifImageView-->
<!--        android:id="@+id/gif_done"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:background="#83F8F8F8"-->
<!--        android:padding="90dp"-->
<!--        android:src="@raw/animation_done"-->
<!--        android:visibility="invisible" />-->
    <Button
        android:id="@+id/logout"
        android:layout_width="177dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_radius_10"
        android:backgroundTint="#FF5722"
        android:text="Đăng xuất"
        android:textSize="0.14in"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <include
        android:id="@+id/bottom_bar"
        layout="@layout/activity_navigation" />
</RelativeLayout>