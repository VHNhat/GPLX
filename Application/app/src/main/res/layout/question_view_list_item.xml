<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        style="@style/ImageRounder_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/green_main"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_question_item_listview"
            style="@style/TextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Câu hỏi thứ 10 bán đang làm cái con gì vây hả"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_board"
            style="@style/ImageRounder_10"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/tv_question_item_listview"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:src="@drawable/bienbao"></ImageView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_board"

            android:paddingTop="20dp"
            android:paddingBottom="20dp">


            <TextView
                android:id="@+id/tv_board_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đáp án"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_board_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_board_code"
                android:text="Biến báp giúp ta nhận biến có nguy hiểm gì đang ập đến hay là không"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>