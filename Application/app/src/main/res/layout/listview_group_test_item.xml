<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        style="@style/ButtonRouder"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/br_textnotice"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"

            >

            <TextView
                android:id="@+id/tv_title_group_test"
                style="@style/PersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Tiêu đề"
                android:textSize="22dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_num_group_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_group_test"
                android:text="Tổng số câu"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/white" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>