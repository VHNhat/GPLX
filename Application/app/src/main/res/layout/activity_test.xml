<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0.4in"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/number_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_positionQuestion"
                style="@style/TextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <TextView
                style="@style/TextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:id="@+id/tv_totalQuestion"
                style="@style/TextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/determinateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/number_question"
            android:allowClickWhenDisabled="true"
            android:progress="40"

            app:trackCornerRadius="20dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/question"
        style="@style/TextQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_bar"
        android:minHeight="1in"
        android:padding="20dp"
        android:text="Câu 10. Bạn đẫ biết đi xe chưa">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/question"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rd_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Answer 1a aaaa a â a â a  â a â â a  aaaaaaaaaa a a â a a a a a">

            </RadioButton>

            <RadioButton
                android:id="@+id/rd_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Answer 1">

            </RadioButton>

            <RadioButton
                android:id="@+id/rd_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Answer 1">

            </RadioButton>

            <RadioButton
                android:id="@+id/rd_answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Answer 1">

            </RadioButton>
        </RadioGroup>

    </RelativeLayout>


    <include layout="@layout/activity_navigation" />
</RelativeLayout>