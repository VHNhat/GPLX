<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_br"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/br_login">

        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        style="@style/radiusTopRightLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_br"
        android:layout_marginTop="-200px"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:paddingBottom="50dp">

        <RelativeLayout
            android:id="@+id/name_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_first_name_signup"
                    style="@style/EditTextRouder"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/br_input"
                    android:hint="First Name"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"  />

                <EditText
                    android:id="@+id/et_last_name_signup"
                    style="@style/EditTextRouder"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/br_input"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />
            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_email_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/name_register"
            android:background="@drawable/br_input"
            android:hint="Email"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <EditText
            android:id="@+id/et_username_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_email_signup"
            android:layout_marginTop="10dp"
            android:background="@drawable/br_input"
            android:hint="Username"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <EditText
            android:id="@+id/et_password_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_username_signup"
            android:layout_marginTop="10dp"
            android:background="@drawable/br_input"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <EditText
            android:id="@+id/et_password_confirm_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/et_password_signup"
            android:layout_marginTop="10dp"
            android:background="@drawable/br_input"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <Button
            android:id="@+id/btn_signup"
            style="@style/ButtonRouder"
            android:background="@drawable/br_button2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/et_password_confirm_signup"
            android:layout_width="match_parent"
            android:text="@string/text_signup"
            android:textSize="17dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btn_signup"
            android:layout_centerHorizontal="true"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Already have account?"/>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:layout_marginLeft="5dp"
                android:text="@string/text_login"
                android:clickable="true"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>